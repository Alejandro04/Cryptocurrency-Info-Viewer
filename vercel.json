{
  "version": 2,
  "builds": [
    {
      "src": "app/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "ui/.svelte-kit/output/client" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "ui/.svelte-kit/output/client/$1"
    }
  ],
  "functions": {
    "api/*": {
      "runtime": "nodejs18.x"
    }
  }
}
